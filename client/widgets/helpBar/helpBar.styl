@import nib
@import '../../../globals.styl'


.uk-active > #helpBar
	box-shadow: 0px 7px 34px -5px rgba(0,0,0,0.35)

#helpBar
	width 100%
	z-index 400
	height 60px
	background-color vfiDarkGrey

	#searchForm
		position relative

		#searchBox
			position relative
			width 85%

			#helpBar-search-txt
				background-color vfiLightGrey
				color  #a4a6a5
				width 100%
				height 35px
				border-radius: 18px 18px 18px 18px
				border: 2px solid #dce3e3
				padding-left 20px
				&::-webkit-input-placeholder
					color vfiDarkGrey

				&::-moz-input-placeholder
					color vfiDarkGrey

			.uk-icon-search
				position absolute
				right 10px
				top 4px

		#btn-help
			position absolute
			color vfiLightGrey
			font-family VodafoneRg_Bd
			font-size 140%
			text-decoration none
			right 0px
			top 5px
			&:hover
				color white
